<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="chapterTitle" type="String" />
        <variable name="asd" type="com.mobile.test.model.Question" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChapterFragment"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:textColorHint="@color/text"
            android:textSize="30sp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:text="@{asd.question}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:textColorHint="@color/text"
            android:textSize="30sp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:text="@{chapterTitle}" />

        <WebView
            android:id="@+id/chapterWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/goToQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top"
            android:backgroundTint="@color/text_disabled"
            android:padding="@dimen/button_padding"
            android:stateListAnimator="@null"
            android:text="Go to question mock"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>
</layout>